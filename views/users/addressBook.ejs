                                            <label for="billingTownCity">Town / City</label>
                                            <input type="text" class="form-control" id="billingTownCity" name="city"
                                                placeholder="Town / City">
                                            <div id="billingTownCityError" class="text-danger"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <!-- Postcode/ZIP -->
                                        <div class="form-group">
                                            <label for="billingPostcodeZip">Postcode / ZIP *</label>
                                            <input type="text" class="form-control" id="billingPostcodeZip"
