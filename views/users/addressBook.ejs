        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const urlParams = new URLSearchParams(window.location.search);
        
                if (urlParams.has('success') && urlParams.get('success') === 'true') {
                    // Display SweetAlert success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Updated address successfully',
                        showConfirmButton: false,
                        timer: 2000,
                    }).then(() => {
                        // Reload the page after the SweetAlert is closed
                        console.log("sweet alert success message displayed");
                        location.reload();
                    });
                }
            });
        
            function editAddressModal(addressId, address) {
                const editAddressModal = document.getElementById('editAddressModal');
                const addressToUpdate = document.getElementById('addressToUpdate');
        
                const selectedAddress = typeof address === 'string' ? JSON.parse(address) : address;
                console.log('Selected Address:', selectedAddress);
        
                addressToUpdate.value = addressId;
        
                document.getElementById('editFirstName').value = selectedAddress.firstName;
                document.getElementById('editLastName').value = selectedAddress.LastName;
                document.getElementById('editState').value = selectedAddress.state;
                document.getElementById('editStreetAddress').value = selectedAddress.address;
                document.getElementById('editTownCity').value = selectedAddress.city;
                document.getElementById('editPostcodeZip').value = selectedAddress.Postcode;
                document.getElementById('editDistrict').value = selectedAddress.district;
                document.getElementById('editPhone').value = selectedAddress.phones;
        
                editAddressModal.style.display = 'block';
            }
        
            function submitEditAddressForm(event) {
                console.log("inside submit edit address form");
                event.preventDefault();
        
                const updatedAddressData = {
                    firstName: document.getElementById('editFirstName').value,
                    LastName: document.getElementById('editLastName').value,
                    state: document.getElementById('editState').value,
                    address: document.getElementById('editStreetAddress').value,
                    city: document.getElementById('editTownCity').value,
                    Postcode: document.getElementById('editPostcodeZip').value,
                    district: document.getElementById('editDistrict').value,
                    phones: document.getElementById('editPhone').value,
                };
        
                const addressId = document.getElementById('addressToUpdate').value;
        
                fetch('/update-address', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ addressId, updatedAddressData }),
                    redirect: 'follow',
                })
                .then(response =>{

                    // console.log(data.message);
                    window.location.reload()

                   
                 response.json()})
                
                .catch(error => {
                    console.error(error);
                });
            }
        </script>
        
        


