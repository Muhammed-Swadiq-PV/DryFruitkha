
<%- include('../layouts/userHeader') %>



<div class="breadcrumb-section breadcrumb-bg">
  <div class="container">
      <div class="row">
          <div class="col-lg-8 offset-lg-2 text-center">
              <div class="breadcrumb-text">
                  <!-- <p>Fresh and Organic</p> -->
                  <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span></p>

                  <h1>CREATE ACCOUNT</h1>
              </div>
          </div>
      </div>
  </div>
</div>


  <section class="ftco-section ftco-cart">
    <div class="container">
      <div class="row align-items-center">
          <div class="col-lg-6 col-md-6">
              <div class="login_part_text text-center">
                  <div class="login_part_text_iner">
                      <h2>New to our Shop?</h2>
                      <p>Get the latest scoop on new arrivals, sales, special offers and receive 20% off on your next purchase.Â®</p>
                      <a href="/login" class="btn btn-primary">Already have an account</a>
                  </div>
              </div>
          </div>
          <div class="col-lg-6 col-md-6">
              <div class="login_part_form bg-light p-4 rounded">
                  <div class="login_part_form_iner text-center">
                      <h2>Create an Account</h2>
                      <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                          
                          <form class="row contact_form" action="/signup" method="post" >
                            <div class="col-md-6 form-group">
                              <input type="text" class="form-control" id="first_name" name="Firstname" value="" placeholder="First Name">
                              <small id="fnameError"></small>
                            </div>
                            <div class="col-md-6 form-group">
                              <input type="text" class="form-control" id="last_name" name="Lastname" value="" placeholder="Last Name">
                              <small id="lnameError"></small>
                            </div>
                            <div class="col-md-12 form-group">
                              <input type="email" class="form-control" id="email" name="email" value="" placeholder="Email" >
                              <small id="emailError"></small>
                            </div>
                            <div class="col-md-12 form-group">
                              <input type="tel" class="form-control" id="phone" name="phone" value="" placeholder="Phone Number">
                              <small id="phoneError"></small>
                            </div>
                            <div class="col-md-12 form-group">
                              <input type="password" class="form-control" id="password" name="password" value="" placeholder="Password">
                              <small id="passwordError"></small>
                            </div>
                            <div class="col-md-12 form-group">
                              <input type="password" class="form-control" id="confirm_password" name="confirmPassword" value="" placeholder="Confirm Password">
                              <small id="cPasswordError"></small>
                            </div>
                            <div class="col-md-12 form-group">
                              <input type="text" class="form-control" id="referral_code" name="referralCode" value="" placeholder="Referral Code (optional)">
                              <small id="referralCodeError"></small>
                          </div>
                            <div class="col-md-12 form-group">
                              <button type="submit" class="btn btn-primary">Sign up</button>
                            </div>
                          </form>
                          
                  </div>
              </div>
          </div>
      </div>
  </div>
  
  
      </section>

      <%- include('../layouts/userfooter') %>
      